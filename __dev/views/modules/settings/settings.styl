.settings
  box-sizing border-box
  background-color #fff
  margin 0 auto
  max-width 955px
  padding-left 25px
  padding-right 35px
  padding-top 20px
  padding-bottom 75px
  border-left 1px solid #d5d5d5
  position relative
  display flex
  flex-direction column
  justify-content space-between
.settings:before
  content ""
  position absolute
  display block
  bottom 0px
  left 3px
  width 1px
  height 100%
  background-color #d5d5d5
.settings:after
  content ""
  position absolute
  display block
  bottom 0px
  left 7px
  width 1px
  height 100%
  background-color #d5d5d5
.settings__title
  font-size 24px
  font-family font-family__main-title
  margin 0px
  width 100%
  margin-bottom 10px
