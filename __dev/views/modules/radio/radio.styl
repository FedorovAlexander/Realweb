.radio-label 
  cursor pointer
  outline none

.radio-input[type="radio"]:focus+radio-label::before 
  outline none

.radio-label input 
  cursor pointer

input[type="radio"] 
  display none

.radio 
  position absolute
  top 6px
  left -1px
  width 15px
  height 15px
  border-radius 50%
  border 1px solid lightgrey

.radio--log-reg 
  background-color #fff

.radio-label input:checked~.radio--log-reg 
  outline none
  background-color #fff

.radio:after 
  position absolute
  display none
  content ""

.radio-label input:checked~.radio:after 
  display block

.radio-label .radio:after 
  top 3px
  left 3px
  width 9px
  height 9px
  border-radius 50%

.radio-label .radio--log-reg:after 
  background #2E3740

.radio-label .radio--vac:after 
  background #2E3740