.address
	&__form 
		border 1px solid #d5d5d5
		padding-top 15px
		padding-right 20px
		padding-bottom 30px
		padding-left 20px
		box-sizing border-box
		position relative
		background-color #ffffff

	&__title 
		margin-top 0px
		font-size $BASE_SIZE
		font-family $FONT-FAMILY
		font-weight normal
		margin-bottom 16px

	&__block 
		position relative
		padding 0
		margin 0

		+below(674px) 
			display flex
			align-items baseline

	&__label 
		font-family $FONT-FAMILY
		font-size $BASE_SIZE - 2
		padding-right 10px
		padding-top 6px
		padding-bottom 6px
		padding-left 10px
		border 1px solid transparent
		display inline-block
		width 78%

		+below(674px) 
			width 65%

		+below(360px) 
			width 55%

	&__remove 
		font-size $BASE_SIZE - 2
		color #e85a22
		position absolute
		right 0px
		top 8px
		border-bottom 1px solid #e85a22
		display none
		cursor pointer 

		+below(674px) 
			display none

	&__remove:visited 
		color #aaaaaa

	&__remove-btn 
		display none
		cursor pointer

		+below(674px) 
			margin-left 15px

	&__add-btn 
		margin-top 20px
		font-family $FONT-FAMILY
		font-size $BASE_SIZE - 2
		color #fff
		padding-top 8px
		padding-bottom 5px
		padding-left 18px
		padding-right 18px
		margin-top 4px
		background-color #cdc9c7
		border none
		border-bottom 2px solid #bcb8b6

	&__wrapper 
		display flex
		flex-direction row
		justify-content space-around
		width 100%
		padding-left 0
		padding-right 0
		
		+below(540px)
			flex-direction column

	&__add 
		background-color #f4f4f4
		border 1px solid #d5d5d5
		padding-right 20px
		padding-bottom 68px
		padding-left 20px
		margin-left auto
		margin-right auto
		max-width 564px
		display none
		position relative

		+above(1049px) 
			margin-left 0

		+below(674px) 
			display flex
			flex-direction column
			display none

	&__title-add 
		text-transform uppercase
		font-size 12px
		margin-top 12px

	&__add-input 
		border-left none
		border 1px solid #d5d5d5
		padding 5px 10px
		margin-bottom 10px
		flex 1
		box-sizing border-box

		+below(674px) 
			width 100%

	&__add-input--index 
		box-sizing border-box
		flex 1  
		margin-right 5px

	&__add-input--address 
			
		+above(674px) 
			width 100%
			box-sizing border-box

	&__add-city, &__add-country 
		border 1px solid #d5d5d5
		padding 5px 7px
		width 100%
		margin-bottom 10px
		margin-left 5px
		margin-right 5px
		border-radius 0
		flex 1

		+above(675px) 
			max-width 260px

		+below(540px)
			margin-left 0

	&__add-city
		margin-right 0

	&__add-btn--orange 
		background-color #e85a22
		border-bottom #cb4815
		margin-top 15px
		padding-left 50px
		padding-bottom 7px
		padding-right 50px
		position absolute
		bottom 30px
		right 20px

		+below(674px) 
			width 100%
			position relative
			top 0
			right 0

#address1 
	border-bottom none

input[type='radio'] 
	height 17px
	width 17px
	margin-bottom 5px
	margin-right 3px
	vertical-align middle