.personal-data__form
  max-width 606px
.personal-data__form--name
  margin-bottom 47px
.personal-data__form--contacts
  margin-bottom 45px
.personal-data__title
  font-size $BASE_SIZE+4
  font-weight normal
.personal-data__input
  display block
  font-size $BASE_SIZE
  font-family $FONT-FAMILY
  padding-top 4px
  padding-bottom 4px
  padding-left 8px
  padding-right 20px
  border 1px solid #d5d5d5
  position relative
input:disabled
  background-color #ffffff
  border 1px solid transparent
.personal-data__item
  position relative
  padding-top 10px
  padding-bottom 10px
  padding-left 10px
  border 1px solid #d5d5d5
  border-bottom none
.personal-data__change
  font-size $BASE_SIZE - 2
  color #aaaaaa
  position absolute
  right 18px
  top 17px
  cursor pointer
  text-decoration underline
.personal-data__change:visited
  color #aaaaaa
.personal-data__change:hover
  color #e85a22
.personal-data__change--save
  display none
  color #e85a22
.personal-data__item--birth-date
.personal-data__item--password
  border-bottom 1px solid #d5d5d5
