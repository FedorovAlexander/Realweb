.personal-data__form
	max-width 600px
.personal-data__form--name
	margin-bottom 23px
.personal-data__form--contacts
	margin-bottom 23px
.personal-data__title
	font-size 18px
	font-weight normal
.personal-data__input
	display block
	width 60%
	font-size 14px
	font-family font-family
	padding-top 5px
	padding-bottom 5px
	padding-left 10px
	padding-right 20px
	border 1px solid #d5d5d5
	position relative
input:disabled
	background-color #ffffff
	border 1px solid transparent
.personal-data__item
	position relative
	padding-top 10px
	padding-bottom 10px
	padding-left 10px
	border 1px solid #d5d5d5
	border-bottom none
.personal-data__change
	font-size font-size - 2
	color #aaaaaa
	position absolute
	right 10px
	top 18px
	cursor pointer
	text-decoration underline
.personal-data__change:visited
	color #aaaaaa
.personal-data__change:hover
	color #e85a22
.personal-data__change--save
	display none
	color #e85a22
.personal-data__item--birth-date
.personal-data__item--password
	border-bottom 1px solid #d5d5d5
.subscribe-label
	display block
	font-size font-size
	line-height 14px
